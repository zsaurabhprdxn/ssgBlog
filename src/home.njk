---
layout: "base.njk"
title: "Eleventy Blog - Home"
pagination: 
    data: collections.blogs
    size: 10
    reverse: true
    alias: posts
permalink: /{{ pagination.pageNumber + 1 }}/index.html
---

{% for post in posts %}
    <article>
        <h1>{{ post.data.title }}</h1>
        <small>{{ post.date | date_UTC }}</small>
        <p>{% excerpt post %}</p>
        <a href='{{ post.url }}'>Read more</a>  
    </article>

{% endfor %}

{% for i in range(1, pagination.pageNumber.length) %}
    <div class="navigation">
        {% if pagination.pageNumber > 0 %}
        <a href='/{{i}}' title='{{i}}'>{{i}}</a>
        {% else %}
        <a href='/{{i + 1}}' title='{{i + 1}}'>{{i + 1}}</a>
        {% endif %}
    </div>

{% endfor %}